from account import Account


def test_account_init():
    account_one = Account('John')
    assert account_one.get_name() == 'John'
    assert account_one.get_balance() == 0


def test_account_deposit():
    account_one = Account('John')
    assert account_one.deposit(100) is True
    assert account_one.get_balance() == 100
    assert account_one.deposit(-100) is False
    assert account_one.get_balance() == 100
    assert account_one.deposit(0) is False
    assert account_one.get_balance() == 100


def test_account_withdraw():
    account_one = Account('John')
    assert account_one.withdraw(50) is False
    assert account_one.get_balance() == 0
    assert account_one.deposit(100) is True
    assert account_one.get_balance() == 100
    assert account_one.withdraw(-50) is False
    assert account_one.get_balance() == 100
    assert account_one.withdraw(0) is False
    assert account_one.get_balance() == 100
    assert account_one.withdraw(200) is False
    assert account_one.get_balance() == 100
    assert account
